<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Orakgarak"
        tools:targetApi="31">
        <activity
            android:name=".ui.facility.FacilitySelectionActivity"
            android:exported="false"
            android:label="@string/title_activity_facility_selection"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Orakgarak" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Orakgarak">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.facility.BilliardsActivity"
            android:theme="@style/Theme.AppCompat"
            />
        <activity
            android:name=".ui.facility.BowlingActivity"
            android:theme="@style/Theme.AppCompat"
            />
        <activity
            android:name=".ui.facility.PcActivity"
            android:theme="@style/Theme.AppCompat"
            />
        <activity
            android:name=".ui.facility.SingingActivity"
            android:theme="@style/Theme.AppCompat"
            />

        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false"
            android:label="Register"
            android:theme="@style/Theme.AppCompat"
            />

    </application>

</manifest>