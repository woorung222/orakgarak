<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- 직사각형 모양 설정 -->

    <!-- 모서리 둥글게 설정 -->
    <corners android:radius="16dp" />

    <!-- 배경색 설정 -->
    <solid android:color="#c9bdf9" /> <!-- 여기서는 보라색을 예로 들었습니다. 원하는 색상 코드로 변경 가능 -->

    <!-- (선택적) 경계선 추가 -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- 경계선 색상 및 두께 설정 -->
</shape>